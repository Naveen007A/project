<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - scopeindia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/scopeindia.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light 
border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Home" >Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="AboutUs" asp-action="About">About us</a>
                        </li>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Contact" asp-action="Contact">Contact</a>
                        </li>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">

                        <li class="nav-item" >
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Home"><img id="logo" src="~/images/scope-india-logo-bird.png" /></a>

       
                        </li>
                        </div>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">

                        <li class="nav-item">
                            <button class="btn btn-warning">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Registration" asp-action="Register">Registration</a>
                            </button>
                        </li>&nbsp;&nbsp;

                        <li class="nav-item" >
                            <button class="btn btn-warning">
                                <a class="nav-link text-dark" asp-area="" asp-controller="LogIn" asp-action="In">LogIn</a>
                            </button>
                </div>  
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div>
            <p>
                &copy; 2024 - scopeindia - <a asp-area="" asp-controller="Home" asp-action="About us">About us</a>
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
